{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/scripts",
    "rootDir": "./src/scripts",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": false,
    "noEmit": false,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/vite-env.d.ts",
    "src/**/*.test.ts"
  ]
} 